# Copy this file to .env and fill in the values

# Database
DATABASE_URL=postgresql://cvhub:cvhub_dev_password@localhost:5432/cvhub

# Redis
REDIS_URL=redis://localhost:6379

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_ACCESS_SECRET=dev-access-secret-change-in-production-min-32-chars
JWT_REFRESH_SECRET=dev-refresh-secret-change-in-production-min-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CSRF Secret
CSRF_SECRET=dev-csrf-secret-change-in-production-min-32-chars

# App URLs
APP_URL=http://localhost:5173
API_URL=http://localhost:3000

# Node environment
NODE_ENV=development
PORT=3000
