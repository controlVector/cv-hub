# Database
DATABASE_URL=postgresql://cvhub:cvhub_dev_password@localhost:5432/cvhub

# Redis
REDIS_URL=redis://localhost:6379

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_ACCESS_SECRET=change-me-to-a-32-char-minimum-secret
JWT_REFRESH_SECRET=change-me-to-another-32-char-secret
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CSRF Secret
CSRF_SECRET=change-me-to-a-csrf-secret-32-chars

# App URLs
APP_URL=http://localhost:5173
API_URL=http://localhost:3000

# Node environment
NODE_ENV=development

# Port Configuration (all optional - will use defaults if not set)
# If a port is in use, Vite will automatically try the next available port
PORT=3000
VITE_WEB_PORT=5173
VITE_API_PORT=3000
VITE_PRD_API_PORT=8000

