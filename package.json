{
  "name": "cv-hub",
  "private": true,
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:web": "pnpm --filter @cv-hub/web dev",
    "dev:api": "pnpm --filter @cv-hub/api dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "db:generate": "pnpm --filter @cv-hub/api db:generate",
    "db:migrate": "pnpm --filter @cv-hub/api db:migrate",
    "db:studio": "pnpm --filter @cv-hub/api db:studio"
  },
  "devDependencies": {
    "typescript": "~5.9.3"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  }
}
